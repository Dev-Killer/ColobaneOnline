        <servlet-class>com.colobane.Servlets.ConfirmerDesactivation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestArticle</servlet-name>
        <servlet-class>com.colobane.Servlets.TestArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AfficheAdmin</servlet-name>
        <servlet-class>com.colobane.Servlets.AfficheAdmin</servlet-class>
