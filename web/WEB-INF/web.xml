        <servlet-class>com.colobane.Servlets.BestSells</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Categories</servlet-name>
        <servlet-class>com.colobane.Servlets.Categories</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deliver</servlet-name>
        <servlet-class>com.colobane.Servlets.Deliver</servlet-class>
