    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestArticle</servlet-name>
        <url-pattern>/testarticle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AfficheAdmin</servlet-name>
        <url-pattern>/intadmin/show</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeconnexionAdmin</servlet-name>
        <url-pattern>/intadmin/deconnexion</url-pattern>
    </servlet-mapping>
     <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.colobane.filters.AdminFilter</filter-class>
    </filter>
     <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/intadmin/show</url-pattern>
        <url-pattern>/intadmin/confirmation</url-pattern>
   
     </filter-mapping>
    <session-config>
        <session-timeout>
        30
    </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>
